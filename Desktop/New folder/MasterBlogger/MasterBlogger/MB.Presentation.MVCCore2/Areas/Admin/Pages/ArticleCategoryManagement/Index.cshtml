@page
@model MB.Presentation.MVCCore2.Areas.Admin.Pages.ArticleCategoryManagement.IndexModel
@{
}

<div class="card">
    <div class="card-header">
        <h3 class="float-left"> ArticleCategories list</h3>
        <div class="float-right">
            <a class="btn btn-success" asp-page="./create" asp-area="admin">Create New</a>

        </div>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Is Deleted</th>
                    <th>Created</th>
                    <th>Opreation</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var article in Model.ArtileCategories)
                {
                <tr>
                    <td>@article.Id</td>
                    <td>@article.Title</td>
                    <td>
                        @if (article.IsDeleted)
                        {
                            <i class="fa fa-close fa-2x text-danger"></i>
                        }
                        else
                        {
                            <i class="fa fa-check fa-2x text-success"></i>
                        }
                    </td>
                    <td>@article.Creation</td>
                    <td>
                        <a class="btn badge-warning  float-left mr-3" asp-page="./Edit" asp-route-id="@article.Id">Edit</a>
                        @if (article.IsDeleted)
                        {
                            <form method="post" asp-page-handler="Active" class="float-left">
                                <button class="badge-success ">Active</button>
                                <input type="hidden" name="id" value="@article.Id" />
                            </form>
                        }
                        else
                        {
                            <form method="post" asp-page-handler="Remove" class="float-left">
                                <button class="badge-danger ">Remove</button>
                                <input type="hidden" name="id" value="@article.Id" />
                            </form>
                        }
                    </td>
                </tr>   
                        }

                   
                </tbody>
        </table>
    </div>
</div>